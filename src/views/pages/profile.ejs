<h1>My Profile</h1>

<% if (user) { %>
  <div style="background: white; padding: 30px; border-radius: 12px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); max-width: 600px; margin: 0 auto;">
    
    <!-- Welcome Message -->
    <div style="background: linear-gradient(135deg, #27ae60 0%, #229954 100%); padding: 20px; border-radius: 10px; color: white; text-align: center; margin-bottom: 30px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
      <div style="font-size: 24px; margin-bottom: 10px;">ðŸ‘‹ Welcome back!</div>
      <p style="margin: 0; font-size: 16px;">Nice to see you, <strong><%= user.name %></strong>!</p>
    </div>
    
    <div style="background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%); padding: 30px; border-radius: 10px; color: white; text-align: center; margin-bottom: 30px;">
      <div style="font-size: 50px; margin-bottom: 15px;">ðŸ‘¤</div>
      <h2 style="margin: 0; font-size: 28px;"><%= user.name %></h2>
    </div>

    <div style="margin-bottom: 25px; padding: 20px; background: linear-gradient(135deg, #e8f4f8 0%, #d0e8f2 100%); border-radius: 10px; border-left: 5px solid #2a5298;">
      <h3 style="margin: 0 0 10px 0; color: #1e3c72;">Account Information</h3>
      <p style="margin: 8px 0; color: #333;"><strong>Email:</strong> <span style="color: #2a5298;"><%= user.email %></span></p>
      <p style="margin: 8px 0; color: #666; font-size: 14;">
        <strong>Member Since:</strong> <span style="color: #2a5298;"><%= new Date().getFullYear() %></span>
      </p>
    </div>

    <div style="margin-bottom: 25px; padding: 20px; background: linear-gradient(135deg, #f0f4f8 0%, #d9e2ec 100%); border-radius: 10px; border-left: 5px solid #f39c12;">
      <h3 style="margin: 0 0 10px 0; color: #1e3c72;">Account Status</h3>
      <p style="margin: 8px 0; color: #333;">
        <span style="display: inline-block; background: #27ae60; color: white; padding: 5px 15px; border-radius: 20px; font-size: 13px; font-weight: 600;">âœ“ Active</span>
      </p>
    </div>

    <div style="margin-bottom: 25px; padding: 20px; background: #f8f9fa; border-radius: 10px; border-left: 5px solid #bdc3c7;">
      <h3 style="margin: 0 0 10px 0; color: #1e3c72;">Quick Actions</h3>
      <div style="display: flex; gap: 10px; flex-wrap: wrap;">
        <a href="/events" style="background: linear-gradient(135deg, #2a5298 0%, #1e3c72 100%); color: white; padding: 10px 20px; border-radius: 6px; text-decoration: none; font-weight: 600; display: inline-block; transition: all 0.3s ease;">My Events</a>
        <a href="/" style="background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%); color: white; padding: 10px 20px; border-radius: 6px; text-decoration: none; font-weight: 600; display: inline-block; transition: all 0.3s ease;">Back to Home</a>
        <a href="/logout" style="background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%); color: white; padding: 10px 20px; border-radius: 6px; text-decoration: none; font-weight: 600; display: inline-block; transition: all 0.3s ease;">Logout</a>
      </div>
    </div>

  </div>
<% } else { %>
  <div style="background: #fff3cd; padding: 20px; border-radius: 10px; text-align: center; border-left: 5px solid #f39c12;">
    <p style="margin: 0; color: #856404; font-size: 16px;">
      Please <a href="/login" style="color: #1e3c72; font-weight: 600; text-decoration: none;">login</a> to view your profile
    </p>
  </div>
<% } %>

  </main>

  <%- include("../partials/footer") %>
  <script src="/js/modal.js"></script>
</body>
</html>
